# Rakefile
desc "Runs all features"
task :tests do
  
  system 'rspec'
  system 'pwd'
end


#cucumber 
#bundler documentation...


#first thing to do 
#spec_helper
#readme.md
#Gemfile
#push it to repository


=begin
desc "Make a Project"
task :makeproject do
system 'mkdir my_project'
system 'cd my_project'
​
system 'touch README.md Gemfile'
system 'echo "# This is My Project" > README.md'
system 'echo "source 'https://rubygems.org\nruby'2.1.1'\n\ngem 'rspec'" > Gemfile''
​
system 'mkdir spec'
system 'touch spec/spec_helper.rb'
system 'echo "require 'rspec'" > spec/spec_helper.rb'
​
system 'bundle install'
​
system 'git init'
system 'git add .'
system 'git commit -m "Initial Commit"'
​
system 'hub create'
system 'git push -u origin master'
system 'hub browse'
end

=end